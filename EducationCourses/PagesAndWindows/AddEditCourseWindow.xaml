<Window x:Class="EducationCourses.PagesAndWindows.AddEditCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EducationCourses.PagesAndWindows"
        mc:Ignorable="d"
        Title="AddEditCourseWindow" Height="450" Width="800">
    <Grid Background="#F0F8FF" Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Добавление курса" FontSize="20" FontWeight="Bold" 
                          Foreground="#2E8B57" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Border Background="White" Padding="20" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Название:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtName" Height="30" FontSize="14" Padding="5"/>

                        <TextBlock Text="Описание:" Margin="0,15,0,5" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtDescription" Height="60" FontSize="14" Padding="5" 
                                TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Длительность (часы):" Margin="0,0,0,5" FontWeight="SemiBold"/>
                                <TextBox x:Name="txtDuration" Height="30" FontSize="14" Padding="5"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                <TextBlock Text="Цена:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                                <TextBox x:Name="txtPrice" Height="30" FontSize="14" Padding="5"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                <TextBlock Text="Макс. студентов:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                                <TextBox x:Name="txtMaxStudents" Height="30" FontSize="14" Padding="5" Text="20"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Уровень:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                                <ComboBox x:Name="cmbLevel" Height="30" FontSize="14">
                                    <ComboBoxItem Content="Начальный" IsSelected="True"/>
                                    <ComboBoxItem Content="Средний"/>
                                    <ComboBoxItem Content="Продвинутый"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Преподаватель:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                                <ComboBox x:Name="cmbTeacher" Height="30" FontSize="14" DisplayMemberPath="FullName"/>
                            </StackPanel>
                        </Grid>

                        <CheckBox x:Name="chkIsActive" Content="Активный курс" IsChecked="True" 
                                 Margin="0,15,0,0" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnSave" Content="💾 Сохранить" Click="btnSave_Click" 
                           Height="35" Width="120" Margin="0,0,10,0" Background="#2E8B57" 
                           Foreground="White" FontWeight="Bold" FontSize="14"/>
                    <Button x:Name="btnCancel" Content="❌ Отмена" Click="btnCancel_Click" 
                           Height="35" Width="120" Background="Transparent" 
                           Foreground="#666" FontWeight="SemiBold" BorderThickness="1" BorderBrush="#DDD"/>
                </StackPanel>

                <TextBlock x:Name="txtMessage" Margin="0,10,0,0" TextWrapping="Wrap" 
                          HorizontalAlignment="Center" FontWeight="SemiBold"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
