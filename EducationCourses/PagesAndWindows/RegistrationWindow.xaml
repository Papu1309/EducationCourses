<Window x:Class="EducationCourses.PagesAndWindows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EducationCourses.PagesAndWindows"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="450" Width="800">
    <Grid Background="#F0F8FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E8B57" Padding="15">
            <TextBlock Text="РЕГИСТРАЦИЯ" 
                      Foreground="White" FontSize="16" FontWeight="Bold" 
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Registration Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30" VerticalAlignment="Center">
                <Border Background="White" Padding="20" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ФИО:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtFullName" Height="30" FontSize="14" Padding="5"/>

                        <TextBlock Text="Логин:" Margin="0,15,0,5" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtLogin" Height="30" FontSize="14" Padding="5"/>

                        <TextBlock Text="Пароль:" Margin="0,15,0,5" FontWeight="SemiBold"/>
                        <PasswordBox x:Name="txtPassword" Height="30" FontSize="14" Padding="5"/>

                        <TextBlock Text="Подтверждение пароля:" Margin="0,15,0,5" FontWeight="SemiBold"/>
                        <PasswordBox x:Name="txtConfirmPassword" Height="30" FontSize="14" Padding="5"/>

                        <TextBlock Text="Email:" Margin="0,15,0,5" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtEmail" Height="30" FontSize="14" Padding="5"/>

                        <TextBlock Text="Телефон:" Margin="0,15,0,5" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtPhone" Height="30" FontSize="14" Padding="5"/>

                        <TextBlock Text="Роль:" Margin="0,15,0,5" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cmbRole" Margin="0,5,0,0" Height="30" FontSize="14">
                            <ComboBoxItem Content="Студент" Tag="Student" IsSelected="True"/>
                            <ComboBoxItem Content="Преподаватель" Tag="Teacher"/>
                        </ComboBox>

                        <Button x:Name="btnRegister" Content="ЗАРЕГИСТРИРОВАТЬСЯ" 
                               Click="btnRegister_Click" Height="35" Margin="0,25,0,0" 
                               Background="#2E8B57" Foreground="White" 
                               FontWeight="Bold" FontSize="14" BorderThickness="0"/>

                        <Button x:Name="btnCancel" Content="ОТМЕНА" 
                               Click="btnCancel_Click" Height="30" Margin="0,10,0,0" 
                               Background="Transparent" Foreground="#666" 
                               FontWeight="SemiBold" BorderThickness="1" BorderBrush="#DDD"/>
                    </StackPanel>
                </Border>

                <TextBlock x:Name="txtMessage" Margin="0,10,0,0" TextWrapping="Wrap" 
                          HorizontalAlignment="Center" FontWeight="SemiBold"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
