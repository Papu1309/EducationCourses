<Window x:Class="EducationCourses.PagesAndWindows.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EducationCourses.PagesAndWindows"
        mc:Ignorable="d"
        Title="PaymentWindow" Height="450" Width="800">
    <Grid Background="#F0F8FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E8B57" Padding="15">
            <TextBlock Text="ОПЛАТА КУРСА" 
                      Foreground="White" FontSize="16" FontWeight="Bold" 
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Payment Form -->
        <StackPanel Grid.Row="1" Margin="25">
            <!-- Course Info -->
            <Border Background="White" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1" 
                   Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Информация о курсе" FontWeight="Bold" FontSize="14" 
                              Foreground="#2E8B57" Margin="0,0,0,10"/>

                    <TextBlock x:Name="txtCourseName" FontWeight="Bold" FontSize="16" 
                              Margin="0,0,0,5" Foreground="#333"/>
                    <TextBlock x:Name="txtCourseDescription" TextWrapping="Wrap" 
                              Margin="0,0,0,10" Foreground="#666"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Длительность" FontSize="11" Foreground="#666"/>
                            <TextBlock x:Name="txtDuration" FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Уровень" FontSize="11" Foreground="#666"/>
                            <TextBlock x:Name="txtLevel" FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Стоимость" FontSize="11" Foreground="#666"/>
                            <TextBlock x:Name="txtPrice" FontWeight="Bold" FontSize="16" 
                                      Foreground="#2E8B57"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Payment Method -->
            <Border Background="White" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1" 
                   Padding="15">
                <StackPanel>
                    <TextBlock Text="Способ оплаты" FontWeight="Bold" FontSize="14" 
                              Foreground="#2E8B57" Margin="0,0,0,15"/>

                    <ComboBox x:Name="cmbPaymentMethod" Height="35" FontSize="14" 
                             SelectionChanged="cmbPaymentMethod_SelectionChanged">
                        <ComboBoxItem Content="Банковская карта" Tag="Card" IsSelected="True"/>
                        <ComboBoxItem Content="Наличные" Tag="Cash"/>
                    </ComboBox>

                    <!-- Card Details - ОБРАТИТЕ ВНИМАНИЕ НА x:Name -->
                    <StackPanel x:Name="pnlCardInfo" Margin="0,15,0,0">
                        <TextBlock Text="Данные карты" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <TextBlock Text="Номер карты:" Margin="0,0,0,5" FontSize="12"/>
                        <TextBox x:Name="txtCardNumber" Height="30" FontSize="14" Padding="5" 
                                MaxLength="19" TextChanged="txtCardNumber_TextChanged"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Срок действия:" FontSize="12" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtExpiryDate" Height="30" FontSize="14" Padding="5" 
                                        MaxLength="5" ToolTip="Формат: ММ/ГГ"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="CVV:" FontSize="12" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtCVV" Height="30" FontSize="14" Padding="5" 
                                        MaxLength="3"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <Button x:Name="btnPay" Content="ОПЛАТИТЬ" Click="btnPay_Click" 
                           Height="40" Margin="0,20,0,0" Background="#2E8B57" 
                           Foreground="White" FontWeight="Bold" FontSize="14" 
                           BorderThickness="0" />
                </StackPanel>
            </Border>

            <TextBlock x:Name="txtMessage" Margin="0,10,0,0" TextWrapping="Wrap" 
                      HorizontalAlignment="Center" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
