<Window x:Class="EducationCourses.PagesAndWindows.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EducationCourses.PagesAndWindows"
        mc:Ignorable="d"
        Title="AddEditUserWindow" Height="450" Width="800">
    <Grid Background="#F0F8FF" Margin="20">
        <StackPanel>
            <TextBlock Text="Добавление пользователя" FontSize="20" FontWeight="Bold" 
                      Foreground="#2E8B57" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Border Background="White" Padding="20" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="ФИО:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtFullName" Height="30" FontSize="14" Padding="5"/>

                    <TextBlock Text="Логин:" Margin="0,15,0,5" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtLogin" Height="30" FontSize="14" Padding="5"/>

                    <TextBlock Text="Пароль:" Margin="0,15,0,5" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="txtPassword" Height="30" FontSize="14" Padding="5"/>

                    <TextBlock Text="Email:" Margin="0,15,0,5" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtEmail" Height="30" FontSize="14" Padding="5"/>

                    <TextBlock Text="Телефон:" Margin="0,15,0,5" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtPhone" Height="30" FontSize="14" Padding="5"/>

                    <TextBlock Text="Роль:" Margin="0,15,0,5" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbRole" Height="30" FontSize="14">
                        <ComboBoxItem Content="Студент" Tag="Student" IsSelected="True"/>
                        <ComboBoxItem Content="Преподаватель" Tag="Teacher"/>
                        <ComboBoxItem Content="Администратор" Tag="Admin"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="btnSave" Content="💾 Сохранить" Click="btnSave_Click" 
                       Height="35" Width="120" Margin="0,0,10,0" Background="#2E8B57" 
                       Foreground="White" FontWeight="Bold" FontSize="14"/>
                <Button x:Name="btnCancel" Content="❌ Отмена" Click="btnCancel_Click" 
                       Height="35" Width="120" Background="Transparent" 
                       Foreground="#666" FontWeight="SemiBold" BorderThickness="1" BorderBrush="#DDD"/>
            </StackPanel>

            <TextBlock x:Name="txtMessage" Margin="0,10,0,0" TextWrapping="Wrap" 
                      HorizontalAlignment="Center" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
