<Window x:Class="EducationCourses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EducationCourses"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E8B57" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🎓" FontSize="20" Margin="0,0,10,0"/>
                    <TextBlock Text="СИСТЕМА УПРАВЛЕНИЯ КУРСАМИ" 
                              Foreground="White" FontSize="16" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Пользователь:" Foreground="White" Margin="0,0,5,0"/>
                    <TextBlock x:Name="txtCurrentUser" Foreground="White" FontWeight="Bold"/>
                    <Button x:Name="btnLogout" Content="Выйти" Click="btnLogout_Click" 
                           Margin="15,0,0,0" Background="Transparent" 
                           Foreground="White" BorderBrush="White" BorderThickness="1"
                           Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Courses Tab -->
            <TabItem Header="📚 Доступные курсы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Filters -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Уровень:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="cmbLevelFilter" Width="120" Margin="0,0,15,0"
                                 SelectionChanged="cmbLevelFilter_SelectionChanged">
                            <ComboBoxItem Content="Все уровни" IsSelected="True"/>
                            <ComboBoxItem Content="Начальный"/>
                            <ComboBoxItem Content="Средний"/>
                            <ComboBoxItem Content="Продвинутый"/>
                        </ComboBox>

                        <Button x:Name="btnRefresh" Content="Обновить" Click="btnRefresh_Click"
                               Margin="0,0,10,0" Padding="10,5"/>

                        <TextBlock x:Name="txtCoursesCount" FontWeight="SemiBold" 
                                  VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Courses Grid -->
                    <DataGrid Grid.Row="1" x:Name="dgCourses" AutoGenerateColumns="False" 
                             CanUserAddRows="False" IsReadOnly="True"
                             SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="300"/>
                            <DataGridTextColumn Header="Длительность" Binding="{Binding Duration}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0:C}}" Width="100"/>
                            <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="100"/>
                            <DataGridTextColumn Header="Преподаватель" Binding="{Binding Users.FullName}" Width="150"/>
                            <DataGridTextColumn Header="Студентов" Binding="{Binding CurrentStudents}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Места" Binding="{Binding MaxStudents}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Записаться" Click="BtnEnroll_Click" 
                                               Background="#2E8B57" Foreground="White" 
                                               Padding="5,2" FontSize="11"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- My Courses Tab -->
            <TabItem Header="📖 Мои курсы" x:Name="tabMyCourses">
                <DataGrid x:Name="dgMyCourses" AutoGenerateColumns="False" 
                         CanUserAddRows="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Курс" Binding="{Binding Courses.Name}" Width="200"/>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Courses.Description}" Width="300"/>
                        <DataGridTextColumn Header="Дата регистрации" 
                                          Binding="{Binding RegistrationDate, StringFormat={}{0:dd.MM.yyyy}}" 
                                          Width="120"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                        <DataGridTextColumn Header="Сумма оплаты" 
                                          Binding="{Binding Payments.Amount, StringFormat={}{0:C}}" 
                                          Width="100"/>
                        <DataGridTextColumn Header="Способ оплаты" 
                                          Binding="{Binding Payments.PaymentMethod}" 
                                          Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Schedule Tab -->
            <TabItem Header="📅 Расписание" x:Name="tabSchedule">
                <DataGrid x:Name="dgSchedule" AutoGenerateColumns="False" 
                         CanUserAddRows="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Курс" Binding="{Binding Courses.Name}" Width="200"/>
                        <DataGridTextColumn Header="День недели" Binding="{Binding DayOfWeek}" Width="120"/>
                        <DataGridTextColumn Header="Время начала" Binding="{Binding StartTime}" Width="100"/>
                        <DataGridTextColumn Header="Время окончания" Binding="{Binding EndTime}" Width="100"/>
                        <DataGridTextColumn Header="Аудитория" Binding="{Binding Classroom}" Width="150"/>
                        <DataGridTextColumn Header="Преподаватель" Binding="{Binding Courses.Users.FullName}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Admin Tab (only for admins) -->
            <TabItem Header="⚙️ Администрирование" x:Name="tabAdmin">
                <TabControl>
                    <TabItem Header="Пользователи" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <Button x:Name="btnAddUser" Content="➕ Добавить" 
                   Click="btnAddUser_Click" Margin="0,0,10,0" Padding="10,5"
                   Background="#2E8B57" Foreground="White" FontWeight="SemiBold"/>
                                <Button x:Name="btnEditUser" Content="✏️ Редактировать" 
                   Click="btnEditUser_Click" Margin="0,0,10,0" Padding="10,5"
                   Background="#FFC107" Foreground="Black" FontWeight="SemiBold"/>
                                <Button x:Name="btnDeleteUser" Content="❌ Удалить" 
                   Click="btnDeleteUser_Click" Margin="0,0,10,0" Padding="10,5"
                   Background="#F44336" Foreground="White" FontWeight="SemiBold"/>
                                <ComboBox x:Name="cmbUserRoleFilter" Width="120"
                     SelectionChanged="cmbUserRoleFilter_SelectionChanged">
                                    <ComboBoxItem Content="Все роли" IsSelected="True"/>
                                    <ComboBoxItem Content="Admin"/>
                                    <ComboBoxItem Content="Teacher"/>
                                    <ComboBoxItem Content="Student"/>
                                </ComboBox>
                            </StackPanel>

                            <DataGrid Grid.Row="1" x:Name="dgUsers" AutoGenerateColumns="False" 
                 CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="40"/>
                                    <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="100"/>
                                    <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="200"/>
                                    <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="80"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                                    <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                                    <DataGridTextColumn Header="Дата регистрации" 
                                  Binding="{Binding RegistrationDate, StringFormat={}{0:dd.MM.yyyy}}" 
                                  Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </TabItem>

            <!-- Добавим новую вкладку для управления курсами -->
            <TabItem Header="Управление курсами">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="btnAddCourse" Content="➕ Добавить курс" 
                   Click="btnAddCourse_Click" Margin="0,0,10,0" Padding="10,5"
                   Background="#2E8B57" Foreground="White" FontWeight="SemiBold"/>
                        <Button x:Name="btnEditCourse" Content="✏️ Редактировать" 
                   Click="btnEditCourse_Click" Margin="0,0,10,0" Padding="10,5"
                   Background="#FFC107" Foreground="Black" FontWeight="SemiBold"/>
                        <Button x:Name="btnDeleteCourse" Content="❌ Удалить" 
                   Click="btnDeleteCourse_Click" Margin="0,0,10,0" Padding="10,5"
                   Background="#F44336" Foreground="White" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cmbCourseFilter" Width="120"
                     SelectionChanged="cmbCourseFilter_SelectionChanged">
                            <ComboBoxItem Content="Все курсы" IsSelected="True"/>
                            <ComboBoxItem Content="Активные"/>
                            <ComboBoxItem Content="Неактивные"/>
                        </ComboBox>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="dgAdminCourses" AutoGenerateColumns="False" 
                 CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding CourseId}" Width="40"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="250"/>
                            <DataGridTextColumn Header="Длительность" Binding="{Binding Duration}" Width="80"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0:C}}" Width="100"/>
                            <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="100"/>
                            <DataGridTextColumn Header="Преподаватель" Binding="{Binding Users.FullName}" Width="150"/>
                            <DataGridTextColumn Header="Макс. студентов" Binding="{Binding MaxStudents}" Width="80"/>
                            <DataGridTextColumn Header="Текущие" Binding="{Binding CurrentStudents}" Width="70"/>
                            <DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Обновим вкладку всех регистраций -->
            <TabItem Header="Все регистрации">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="btnDeleteRegistration" Content="❌ Удалить регистрацию" 
                   Click="btnDeleteRegistration_Click" Margin="0,0,10,0" Padding="10,5"
                   Background="#F44336" Foreground="White" FontWeight="SemiBold"/>
                        <Button x:Name="btnRefreshRegistrations" Content="🔄 Обновить" 
                   Click="btnRefreshRegistrations_Click" Margin="0,0,10,0" Padding="10,5"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="dgAllRegistrations" AutoGenerateColumns="False" 
                 CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding RegistrationId}" Width="40"/>
                            <DataGridTextColumn Header="Студент" Binding="{Binding Users.FullName}" Width="150"/>
                            <DataGridTextColumn Header="Курс" Binding="{Binding Courses.Name}" Width="150"/>
                            <DataGridTextColumn Header="Дата регистрации" 
                                  Binding="{Binding RegistrationDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}" 
                                  Width="140"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Оплата" 
                                  Binding="{Binding Payments.Amount, StringFormat={}{0:C}}" 
                                  Width="100"/>
                            <DataGridTextColumn Header="Способ" 
                                  Binding="{Binding Payments.PaymentMethod}" 
                                  Width="80"/>
                            <DataGridTextColumn Header="Дата оплаты" 
                                  Binding="{Binding Payments.PaymentDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}" 
                                  Width="140"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="8">
            <TextBlock x:Name="txtStatus" Text="Готово" Foreground="#666" FontSize="11"/>
        </Border>
    </Grid>
</Window>
